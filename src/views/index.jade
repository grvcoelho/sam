doctype html
html(lang="en", ng-app="sam")
head
  meta(charset="utf-8")
  meta(http-equiv="X-UA-Compatible", content="IE=edge")
  meta(name="viewport", content="width=device-width, initial-scale=1")
  title Sam
  link(rel="stylesheet", href="assets/stylesheets/style.css")
  link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Vollkorn:300,400,600,700,800")
  link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800")
  link(rel="stylesheet", href="https://fontastic.s3.amazonaws.com/ef5VYE8UZ4D5zRPdjt5PyP/icons.css")
  link(rel="icon", href="favicon.ico" type="image/x-icon")

body
  div.main-section
    
    h1 Por que eu te amo tanto?

    h2 Me perguntei isso todos os dias nos últimos 3 meses e aqui estão 180 dos meus motivos

    i.icon-like-love-streamline

    div.carousel(ng-controller="PostController")
      div.carousel-header 
        |{{post.date}}
        div.carousel-control-left(ng-click="prev()")
          i.icon-angle-left
        div.carousel-control-right(ng-click="next()")
          i.icon-angle-right

      div.carousel-body {{post.message}}

    div.footer
      i.footer__icon.icon-code
      span.footer__text  com 
      i.footer__icon.icon-heart-1
      span.footer__text  por 
      a(href="https://github.com/guilhermervcoelho") 
        strong Gui
      span.footer__text
        | &nbsp; para
        strong &nbsp; Sam





  script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.min.js")
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
  script(src="assets/javascripts/app.js")